# Versión          : 1.0
# Arquitectura     : ARM64 en AWS EC2
# Requisitos       : Python 3.6+
# ------------------------------------------------------------------------------
REFERENCIA
using System;

class Program {
    static void Main() {
        int n = 17;
        bool isPrime = n > 1;
        for (int i = 2; i * i <= n && isPrime; i++) {
            if (n % i == 0) isPrime = false;
        }
        Console.WriteLine("Es primo: " + isPrime);
    }
}
------------------------------------------------------------------------------
    .section .data
msg_prime_yes:
    .asciz "Es primo\n"
msg_prime_no:
    .asciz "No es primo\n"

    .section .text
    .global _start

_start:
    mov x0, 17                // Número a verificar
    mov x1, 2                 // Divisor inicial
    mov x2, 1                 // Flag para es primo (1 = primo, 0 = no primo)

prime_check_loop:
    mul x3, x1, x1            // Calcular i * i
    cmp x3, x0                // Verificar si i * i > n
    bgt prime_end             // Si es mayor, salir del bucle

    udiv x3, x0, x1           // Dividir n entre i
    msub x3, x3, x1, x0       // Obtener el resto n % i
    cbz x3, not_prime         // Si n % i == 0, no es primo

    add x1, x1, 1             // Incrementar el divisor
    b prime_check_loop        // Repetir el bucle

not_prime:
    mov x2, 0                 // Cambiar el flag a no primo

prime_end:
    // Imprimir resultado
    mov x0, 1
    ldr x1, =msg_prime_yes
    cbz x2, not_prime_msg
    mov x8, 64
    svc 0
    b end_program

not_prime_msg:
    ldr x1, =msg_prime_no
    mov x8, 64
    svc 0

end_program:
    // Salida del programa
    mov x0, 0
    mov x8, 93
    svc 0
